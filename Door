import java.util.ArrayList;
import javax.swing.ImageIcon;

public class Door{
    //close and open animation 
    // if number for key and door is the same open the door
    private ArrayList<Door> numDoor;
    private ArrayList<Key> key;
    private ImageIcon icon;
    private int direction;
    private int doorNum;
    private boolean isOpen;
    public Door(int doorNum){
        numDoor = new ArrayList<Door>();
        key = new ArrayList<Key>();
        icon = new ImageIcon("ClosedDoor.png");
        this.doorNum = doorNum;
        isOpen = false;
    }
    public void isOpen(int doorNumber){
        for(int i = 0; i < key.size(); i++){
            if(key.get(i).getKeyNum() != doorNum){
                isOpen == true;
            }
        }
    }
    public int doorNum(){
        return doorNum;
    }
    public void update(){
        this.animation(4);
        
    }
}

